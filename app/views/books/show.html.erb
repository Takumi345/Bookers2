
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/info', book: @book , user: @user%>

    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">

        <tbody>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %>
              <br>
              <%= link_to user_path(@user.id) do%>
              <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_sub.id) do %>
              <%= @book_sub.title %>
              <% end %>
            </td>
            <td>
              <%= @book_sub.body %>
            </td>
             <td>
              <% if @user == current_user %>
                <%= link_to "Edit" ,edit_book_path(@book_sub.id), class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
              <td>
              <% if @user == current_user %>
                <%= link_to "Destroy" ,book_path(@book_sub.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？"  %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>